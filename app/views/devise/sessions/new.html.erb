<style>
  body {
    background-color: #E9C891 !important;
  }
  .left-container {background-color: #E9C891 !important;
  opacity: 0.6}
 </style>
<div class='w-full max-w-xs mx-auto'>

  <div class='flex-col '>
    <h1 class='text-yellow-700 text-center my-8 text-4xl py-3'>Log in</h1>
    <div class='text-yellow-700'>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      :label_html=>{:class=>'text-yellow-700'} %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" },
                      :label_html=>{:class=>'text-yellow-700'} %>
          <%= f.input :remember_me, :label_html=>{:class=>'text-yellow-700'},  as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions bg-yellow-700 w-full text-center rounded">
          <%= f.button :submit, "Log in",
          class: 'bg-yellow-700 text-white text-lg ' %>
        </div>
      <% end %>
    </div>
    <div class=''>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
