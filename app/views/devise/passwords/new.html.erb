<div class='w-full max-w-xs mx-auto text-yellow-700 my-8'>

<h2 class="pb-3 text-lg">Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label_html: { class: 'text-yellow-700' } %>
  </div>

  <div>
    <%= f.button :submit, "Send reset instructions", class: "form-actions bg-yellow-700 w-full text-center rounded text-white py-3 text-lg hover:bg-yellow-400"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
