<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <%= event.name %>
      <tr>
        <td><%= event.name %></td>
        <td><%= link_to 'Show', controller: :event, action: :show, id: event %></td>
        <td><%= link_to 'Edit', controller: :event, action: :edit, id: event %></td>
        <td><%= link_to 'Destroy', controller: :event, action: :destroy, id: event, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', :controller => 'events', :action => 'new' %>
