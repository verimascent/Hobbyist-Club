<h1 class='font-bold text-3xl text-gray-800 my-8'>Events you host</h1>

<div class='max-w-screen-lg grid gap-8 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4'>
    <!--Card event you host-->
  <% @user_created_events = @user.events %>
  <% @user_created_events.each do |event| %>
      <div class="max-w-sm rounded overflow-hidden shadow-lg">
        <img class="w-full h-38 sm:h-48 object-cover" src="https://source.unsplash.com/random" alt="randomIMG">
        <div class="px-2 py-2">
          <div class="font-bold text-base text-yellow-700 mb-2"><%= link_to event.date, event %></div>
            <p class="text-gray-800 text-base">
            <%= event.name %>
            </p>
          </div>
        <div class="flex p-2 inline justify-between">
          <span class="inline-block text-sm font-semibold text-gray-700 mr-2 mb-2"><%= event.users.length %> Going</span>        </div>
      </div>
  <% end %>

</div>

<h1 class='font-bold text-3xl text-gray-800 mb-8 mt-16'>Events you're attending</h1>
<div class='max-w-screen-lg grid gap-8 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4'>
    <!--Card event you attend-->
  <% @user_reservations = @user.events %>
  <% @user_reservations.each do |reservation| %>
      <div class="max-w-sm rounded overflow-hidden shadow-lg">
        <img class="w-full h-38 sm:h-48 object-cover" src="https://source.unsplash.com/random" alt="randomIMG">
        <div class="px-2 py-2">
          <div class="font-bold text-base text-yellow-700 mb-2"><%= link_to reservation.date, reservation %></div>
            <p class="text-gray-800 text-base">
            <%= reservation.name %>
            </p>
          </div>
        <div class="flex p-2 inline justify-between">
          <span class="inline-block text-sm font-semibold text-gray-700 mr-2 mb-2"><%= reservation.users.length %> Going</span>
        </div>
      </div>
  <% end %>
</div>
